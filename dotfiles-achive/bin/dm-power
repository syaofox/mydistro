#!/usr/bin/env bash

choices="Reboot\nPower off"
chosen=$(echo -e "$choices" | dmenu -i -p "Select:")

case "$chosen" in
    'Reboot') 
        rchoices="Yes\nNo"
        rchosen=$(echo -e "$rchoices" | dmenu -i -p "Confirm?:")
        if [ $rchosen = "Yes" ]; then
            shutdown -r now
        fi
    ;;
    'Power off')
        pchoices="Yes\nNo"
        pchosen=$(echo -e "$pchoices" | dmenu -i -p "Confirm?:")
        if [ $pchosen = "Yes" ]; then
            shutdown -h now
        fi
    
    ;;
esac

